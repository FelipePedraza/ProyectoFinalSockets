<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="365.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectofinal.controlador.SolicitudesController">
    <children>
        <!-- Tabla para mostrar las solicitudes -->
        <TableView fx:id="tablaSolicitudes" layoutX="30.0" layoutY="38.0" prefHeight="295.0" prefWidth="540.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="32.0">
            <columns>
                <!-- Columna combinada para remitente y mensaje -->
                <TableColumn fx:id="columnaDetalle" prefWidth="550.0" text="Solicitudes" />
            </columns>
        </TableView>

        <!-- Botón para aceptar la solicitud -->
        <Button fx:id="botonAceptar" layoutX="168.0" layoutY="339.0" mnemonicParsing="false" onAction="#aceptarSolicitud" text="Aceptar" AnchorPane.bottomAnchor="10.0" />

        <!-- Botón para rechazar la solicitud -->
        <Button fx:id="botonRechazar" layoutX="368.0" layoutY="339.0" mnemonicParsing="false" onAction="#rechazarSolicitud" text="Rechazar" AnchorPane.bottomAnchor="10.0" />
    </children>
</AnchorPane>
