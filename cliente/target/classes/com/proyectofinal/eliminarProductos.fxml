<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="518.0" prefWidth="611.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectofinal.controlador.EliminarProductoController">
    <children>
        <!-- Tabla para mostrar los productos -->
        <TableView fx:id="tablaProductos" layoutX="76.0" layoutY="59.0" prefHeight="400.0" prefWidth="460.0" AnchorPane.bottomAnchor="59.0" AnchorPane.leftAnchor="76.0" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="59.0">
            <columns>
                <!-- Columna para el nombre del producto -->
                <TableColumn fx:id="columnaNombre" prefWidth="120.0" text="Nombre" />

                <!-- Columna para el codigo -->
                <TableColumn fx:id="columnaCodigo" prefWidth="80.0" text="Codigo" />
                
                <!-- Columna para la categoría -->
                <TableColumn fx:id="columnaCategoria" prefWidth="100.0" text="Categoría" />

                <!-- Columna para el precio -->
                <TableColumn fx:id="columnaPrecio" prefWidth="80.0" text="Precio" />

                <!-- Columna para el estado -->
                <TableColumn fx:id="columnaEstado" prefWidth="80.0" text="Estado" />

            </columns>
        </TableView>
        
        <!-- Botón de Eliminar -->
        <Button fx:id="eliminarButton" layoutX="190.0" layoutY="479.0" mnemonicParsing="false" onAction="#eliminarProductoSeleccionado" text="Eliminar" AnchorPane.bottomAnchor="14.0" AnchorPane.topAnchor="479.0" />

        <!-- Botón de Cancelar -->
        <Button fx:id="cancelarButton" layoutX="360.0" layoutY="479.0" mnemonicParsing="false" onAction="#cerrarVentana" text="Cancelar" AnchorPane.bottomAnchor="14.0" AnchorPane.topAnchor="479.0" />
      <Label layoutX="233.0" layoutY="14.0" text="Productos" AnchorPane.bottomAnchor="465.0" AnchorPane.leftAnchor="233.0" AnchorPane.rightAnchor="233.0" AnchorPane.topAnchor="14.0">
         <font>
            <Font name="Arial Black" size="26.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
